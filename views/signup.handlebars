<h2 class="text-center">Create an account</h2>

<form class="mx-auto row signup-form">
    <div class="form-container">
    <div class="form-group row">
        <label for="user-signup" class="col-form-label">Username</label>
    </div>
    <div class="col-sm-8">
        <input type="username" class="form-control" id="user-signup" placeholder="Username">
    </div>


    <div class="form-group row">
        <label for="password-signup" class="col-form-label">Password</label>
    </div>    
    <div class="col-sm-8">
        <input type="password" class="form-control" id="password-signup" placeholder="Password">
    </div>

    <div class="user-type">
        <div class="col-form-label pt-0">What type of user are you?</legend>
    </div>
        
    <div class="form-check">
    <input class="form-check-inline" type="radio" name="exampleRadios" id="mentor-signup" value="mentor" checked>
    <label class="form-check-label" for="mentor-signup">
        Mentor
    </label>
    </div>

    <div class="form-check">
    <input class="form-check-inline" type="radio" name="exampleRadios" id="mentee-signup" value="mentee">
    <label class="form-check-label" for="mentee-signup">
        Mentee
    </label>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
        <button type="submit" class="btn button" id="sign-up-button">Sign up</button>
        </div>
    </div>
    </div>
</form>

<script src="./js/signup.js"></script>