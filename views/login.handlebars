<h2 class="text-center">Login</h2>
<h3 class="text-center">Don't have an account? <a href="/signup">Sign up</a></h3>

<form class="mx-auto row">
    <div class="form-container">
    <div class="form-group row">
        <label for="inputEmail3" class="col-form-label">Username</label>
    </div>
    <div class="col-sm-8">
        <input type="username" class="form-control" id="user-login" placeholder="Username">
    </div>


    <div class="form-group row">
        <label for="inputPassword3" class="col-form-label">Password</label>
    </div>    
    <div class="col-sm-8">
        <input type="password" class="form-control" id="password-login" placeholder="Password">
    </div>


        
    <div class="form-group row">
        <div class="col-sm-10">
        <a href="/dashboard"><button type="submit" class="btn button" id="login-button">Log in</button></a>
        </div>
    </div>
    </div>
</form>
