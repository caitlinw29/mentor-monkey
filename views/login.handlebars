<h2 class="text-center">Login</h2>
<h3 class="text-center">Don't have an account? <a href="/signup">Sign up</a></h3>

<form class="mx-auto row login-form">
    <div class="form-container">
    <div class="form-group row">
        <label for="user-login" class="col-form-label">Username</label>
    </div>
    <div class="col-sm-8">
        <input type="text" class="form-control" id="user-login" placeholder="Username">
    </div>


    <div class="form-group row">
        <label for="password-login" class="col-form-label">Password</label>
    </div>    
    <div class="col-sm-8">
        <input type="password" class="form-control" id="password-login" placeholder="Password">
    </div>


        
    <div class="form-group row">
        <div class="col-sm-10">
        <button type="submit" class="btn button" id="login-button">Log in</button>
        </div>
    </div>
    </div>
</form>

<script src="./js/login.js"></script>