<div class="card border-0 mx-auto mb-4" style="width: 30rem;">
  <h3 class="mt-4">Ready to mentor?</h3>
  <!--Buttons to add and remove from mentor list-->
  <button type="submit" class="mx-auto btn blue-button" id="mentorBtn">Add me to the mentor list!</button>
  <button type="submit" class="mx-auto btn maroon-button mb-4" id="removeMentorBtn">Stop Mentoring</button>
 </div>

<!--List of mentors-->
<div class="container">
  <div class="mt-4 ml-4">
    <h4 class="color-light ml-2">Choose a mentor:</h4>
  <div>

<!--cards for each mentor-->
  <div class="card-mentor border-0 mb-4" style="width: 20rem;">
    <div class="card-body">
      <h5 class="card-title mb-4">Name Goes Here {{name}}</h5>
      <h6 class="card-subtitle mb-2 maroon">About Me:</h6>
      <p class="card-text mb-4">Some quick example text to build on the card title and make up the bulk of the card's content.{{about}}</p>
      <h6 class="card-subtitle mb-2 maroon">My Skills:</h6>
      <div class="skills">
        {{languages}} 
        <p class="lang">Javascript</p> 
        <p class="lang">node.js</p> 
        <p class="lang">Handebars</p>
      </div>
      <div class="align-content-center">
        <button class="btn maroon-button mt-4" data-id="{{id}}">Select Mentor</button>
      </div>
    </div>
  </div>


{{#each mentorProfiles as |profile|}}




    </div>
  </div>
{{/each}}
</div>
</div>
</div>

<script src="./js/dashboard.js"></script>




