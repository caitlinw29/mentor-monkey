<p>Choose a mentor:</p>
{{#each profiles as |profile|}}
  <div class="row mb-2">
    <div class="col-md-8">
      <h4>{{name}}</h4>
    </div>
    <div class="col-md-8">
      <p>About Me:</p>
      <p>{{about}}</p>
      <p>My Skills:</p>
      <p>{{languages}}</p>
    </div>
    <div class="col-md-4">
      <button class="btn btn-lg" data-id="{{id}}">Choose this mentor</button>
    </div>
  </div>
{{/each}}